{
    "name": "functions",
    "scripts": {
        "build": "tsc",
        "serve": "npm run build && yarn serve-and-seed",
        "serve-and-seed": "run-p serve:emulator seed",
        "serve:emulator": "firebase emulators:start --only firestore,functions",
        "seed": "wait-on tcp:5002 && cd ../ && yarn seed:firestore",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log"
    },
    "engines": {
        "node": "10"
    },
    "main": "src/index.js",
    "dependencies": {
        "@types/axios": "^0.14.0",
        "@types/express": "^4.17.6",
        "axios": "^0.19.2",
        "express": "^4.17.1",
        "firebase-admin": "^8.10.0",
        "firebase-functions": "^3.6.1",
        "run-all": "^1.0.1",
        "wait-on": "^5.0.1"
    },
    "devDependencies": {
        "firebase-functions-test": "^0.2.0",
        "typescript": "^3.8.0"
    },
    "private": true
}
